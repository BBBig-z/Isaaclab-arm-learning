<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panther_description">
    
    <!-- Mock 硬件模式专用 URDF -->
    <!-- 不使用 Gazebo，不使用仿真时间 -->
    
    <!-- 导入基础 URDF (不包含 ros2_control) -->
    <xacro:include filename="$(find panther_description)/urdf/panther_description.urdf" />
    
    <!-- 导入 Mock 硬件专用的 ros2_control 配置 -->
    <xacro:include filename="$(find panther_description)/urdf/panther_mock_control.xacro" />

</robot>

